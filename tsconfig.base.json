{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "paths": {
      "@features/client-management": ["libs/features/client-management/src/index.ts"],
      "@features/dashboard-overview": ["libs/features/dashboard-overview/src/index.ts"],
      "@features/depot-management": ["libs/features/depot-management/src/index.ts"],
      "@features/employee-management": ["libs/features/employee-management/src/index.ts"],
      "@features/notification-management": ["libs/features/notification-management/src/index.ts"],
      "@features/order-management": ["libs/features/order-management/src/index.ts"],
      "@features/route-management": ["libs/features/route-management/src/index.ts"],
      "@features/route-optimisation": ["libs/features/route-optimisation/src/index.ts"],
      "@features/settings-management": ["libs/features/settings-management/src/index.ts"],
      "@features/support-management": ["libs/features/support-management/src/index.ts"],
      "@features/vehicle-management": ["libs/features/vehicle-management/src/index.ts"],
      "@profolio/app/components/*": ["./apps/locatr-frontend/src/components/*"],
      "@profolio/app/guards/*": ["./apps/locatr-frontend/src/guards/*"],
      "@profolio/app/layout/*": ["./apps/locatr-frontend/src/layout/*"],
      "@profolio/app/middleware/*": ["./apps/locatr-frontend/src/middleware/*"],
      "@profolio/app/pages/*": ["./apps/locatr-frontend/src/pages/*"],
      "@profolio/app/services/*": ["./apps/locatr-frontend/src/services/*"],
      "@profolio/core": ["libs/core/src/index.ts"],
      "@profolio/frontend/maps": ["libs/frontend/maps/src/index.ts"],
      "@profolio/frontend/services": ["libs/frontend/services/src/index.ts"],
      "@profolio/frontend/shared/ui": ["libs/frontend/shared/ui/src/index.ts"],
      "@profolio/interfaces": ["libs/interfaces/src/index.ts"],
      "@profolio/offcanvas": ["libs/frontend/offcanvas/src/index.ts"],
      "@profolio/route-map": ["libs/route-map/src/index.ts"],
      "@profolio/shared/badge": ["libs/shared/badge/src/index.ts"],
      "@profolio/shared/chart-card": ["libs/shared/chart-card/src/index.ts"],
      "@profolio/shared/stat-card": ["libs/shared/stat-card/src/index.ts"],
      "@profolio/shared/toggle-switch": ["libs/shared/toggle-switch/src/index.ts"],
      "@profolio/utils": ["libs/utils/src/index.ts"],
      "@toaster": ["libs/shared/toaster/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
