{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/apps/locatr-frontend/browser"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "dist/apps/locatr-backend/**"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/dist/apps/locatr-backend/main.js"
    },
    {
      "source": "/auth/:path*",
      "destination": "/dist/apps/locatr-frontend/browser/index.html"
    },
    {
      "source": "/dashboard/:path*",
      "destination": "/dist/apps/locatr-frontend/browser/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/dist/apps/locatr-frontend/browser/index.html"
    }
  ]
}
