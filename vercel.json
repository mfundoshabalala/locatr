{
  "version": 2,
  "buildCommand": "npx nx build",
  "installCommand": "pnpm install",
  "devCommand": "pnpm run dev",
  "builds": [
    {
      "src": "apps/locatr-frontend/**/!(main).ts",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/apps/locatr-frontend"
      }
    },
    {
      "src": "apps/locatr-backend/main.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "dist/apps/locatr-backend/**"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/dist/apps/locatr-backend/main.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/apps/locatr-frontend/index.html"
    }
  ]
}
