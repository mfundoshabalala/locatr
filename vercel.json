{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/apps/locatr-frontend/browser"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "dist/apps/locatr-backend/**"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/apps/locatr-backend/main.js"
    }
  ],
  "redirects": [
    {
      "source": "/auth/:path*",
      "destination": "/index.html",
      "statusCode": 200
    },
    {
      "source": "/dashboard/:path*",
      "destination": "/index.html",
      "statusCode": 200
    },
    {
      "source": "/(.*)",
      "destination": "/index.html",
      "statusCode": 200
    }
  ]
}
