{
  "version": 2,
  "buildCommand": "npx nx build",
  "installCommand": "pnpm install",
  "devCommand": "pnpm run dev",
  "builds": [
    {
      "src": "apps/locatr-frontend/src/main.ts",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/apps/locatr-frontend"
      }
    },
    {
      "src": "apps/locatr-backend/src/main.ts",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "nodejs18.x"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/apps/locatr-backend/src/$1",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    {
      "src": "/(.*)",
      "dest": "/apps/locatr-frontend/dist/$1"
    }
  ]
}
