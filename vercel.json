{
  "version": 2,
  "builds": [
    {
      "src": "apps/locatr-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/apps/locatr-frontend"
      }
    },
    {
      "src": "apps/locatr-backend/package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "dist/apps/locatr-backend/**"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/dist/apps/locatr-backend/main.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/apps/locatr-frontend/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
